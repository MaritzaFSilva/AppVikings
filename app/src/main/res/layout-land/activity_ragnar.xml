<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RagnarActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="216dp"
            android:layout_height="172dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/textView2"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:srcCompat="@mipmap/ic_ragnar"
            tools:srcCompat="@mipmap/ic_ragnar_foreground" />

        <TextView
            android:id="@+id/txNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/ragnar_name"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/txAmigos"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/ragnar_description"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@+id/btLagherta"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txNome" />

        <Button
            android:id="@+id/btLagherta"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/lagherta_name"
            app:layout_constraintEnd_toEndOf="@+id/txAmigos"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/txAmigos"
            app:layout_constraintTop_toBottomOf="@+id/txAmigos" />

        <Button
            android:id="@+id/btBjorn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/bjorn_name"
            app:layout_constraintEnd_toEndOf="@+id/btLagherta"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/btLagherta"
            app:layout_constraintTop_toBottomOf="@+id/btLagherta" />

        <Button
            android:id="@+id/btFloki"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/floki_name"
            app:layout_constraintEnd_toEndOf="@+id/btBjorn"
            app:layout_constraintStart_toStartOf="@+id/btBjorn"
            app:layout_constraintTop_toBottomOf="@+id/btBjorn" />

        <TextView
            android:id="@+id/txAmigos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:text="@string/favorite_friends"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txNome"
            app:layout_constraintTop_toTopOf="@+id/txNome" />

        <TextView
            android:id="@+id/txOrigem"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/origin"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/btFloki"
            app:layout_constraintStart_toStartOf="@+id/btFloki"
            app:layout_constraintTop_toBottomOf="@+id/btFloki" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>